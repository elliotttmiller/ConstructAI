# ==========================================
# ConstructAI Platform - Environment Variables
# ==========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# ==========================================
# Supabase Configuration
# ==========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-public-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-secret-key-here

# ==========================================
# NextAuth Configuration
# ==========================================
# Generate a secure random string for NEXTAUTH_SECRET
# You can use: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# ==========================================
# AI Services API Keys
# ==========================================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google AI API Key (for Gemini models)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Azure OpenAI Configuration (optional)
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Anthropic Configuration (future support)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ==========================================
# Universal AI Model Configuration
# ==========================================
# Configure different AI models for different tasks
# Providers: openai, google, azure, anthropic

# PRIMARY AI MODEL (General responses)
AI_PRIMARY_PROVIDER=openai
AI_PRIMARY_MODEL=gpt-4-turbo-preview
AI_PRIMARY_TEMPERATURE=0.7
AI_PRIMARY_MAX_TOKENS=1500
AI_PRIMARY_TOP_P=1.0
AI_PRIMARY_FREQUENCY_PENALTY=0.1
AI_PRIMARY_PRESENCE_PENALTY=0.1
AI_PRIMARY_ENABLED=true

# DOCUMENT ANALYSIS MODEL (OCR, PDF processing)
AI_DOCUMENT_PROVIDER=openai
AI_DOCUMENT_MODEL=gpt-4-turbo-preview
AI_DOCUMENT_TEMPERATURE=0.3
AI_DOCUMENT_MAX_TOKENS=2000
AI_DOCUMENT_ENABLED=true

# BIM ANALYSIS MODEL (3D modeling, CAD files)
AI_BIM_PROVIDER=openai
AI_BIM_MODEL=gpt-4-turbo-preview
AI_BIM_TEMPERATURE=0.4
AI_BIM_MAX_TOKENS=1800
AI_BIM_ENABLED=true

# COST ESTIMATION MODEL (Financial analysis)
AI_COST_PROVIDER=openai
AI_COST_MODEL=gpt-4-turbo-preview
AI_COST_TEMPERATURE=0.2
AI_COST_MAX_TOKENS=1200
AI_COST_ENABLED=true

# FALLBACK MODEL (When primary models fail)
AI_FALLBACK_PROVIDER=openai
AI_FALLBACK_MODEL=gpt-3.5-turbo
AI_FALLBACK_TEMPERATURE=0.7
AI_FALLBACK_MAX_TOKENS=1000
AI_FALLBACK_ENABLED=true

# ==========================================
# Hunyuan3D Configuration
# ==========================================
# URL for the Hunyuan3D server (local or deployed)
NEXT_PUBLIC_HUNYUAN3D_URL=http://localhost:8000
HUNYUAN3D_SERVER_URL=http://localhost:8000

# ==========================================
# Build123d CAD Service Configuration
# ==========================================
# URL for the Build123d parametric CAD service
CAD_SERVICE_URL=http://localhost:8001
CAD_SERVICE_PORT=8001
# Enable/disable CAD service features
CAD_SERVICE_ENABLED=true

# ==========================================
# Collaboration Service
# ==========================================
# WebSocket URL for real-time collaboration
NEXT_PUBLIC_COLLABORATION_WS_URL=ws://localhost:3001

# ==========================================
# Demo User Credentials (Development Only)
# ==========================================
# DEPRECATED: Demo users with hardcoded credentials have been removed
# Use Supabase Auth to create real users instead
# Create users via Supabase dashboard or signup page


# ==========================================
# Autodesk Forge/AutoCAD Integration
# ==========================================
# Optional: For CAD integration features
AUTODESK_CLIENT_ID=your-autodesk-client-id
AUTODESK_CLIENT_SECRET=your-autodesk-client-secret

# ==========================================
# Microsoft Azure (for Revit integration)
# ==========================================
# Optional: For Revit integration features
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_APPLICATION_ID=your-azure-application-id
AZURE_APPLICATION_SECRET=your-azure-application-secret

# ==========================================
# Environment Configuration
# ==========================================
NODE_ENV=development
# Change to 'production' when deploying

# ==========================================
# Database Configuration
# ==========================================
# These are usually auto-configured by Supabase
# Uncomment if you need direct database access
# DATABASE_URL=postgresql://postgres:[password]@[host]:5432/postgres

# ==========================================
# Error Tracking & Monitoring
# ==========================================
# Optional: Add your error tracking service keys
# SENTRY_DSN=your-sentry-dsn
# DATADOG_API_KEY=your-datadog-api-key

# ==========================================
# Storage Configuration
# ==========================================
# Optional: Custom storage configuration
# AWS_S3_BUCKET=your-s3-bucket
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ==========================================
# Email Configuration
# ==========================================
# Optional: For email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-email-password
