# ==========================================
# ConstructAI Platform - Base Configuration
# ==========================================
# This file contains default/placeholder values
# Create .env.local with your actual values (will override these)
# NEVER commit .env.local to version control!

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=development
PORT=3000
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# ==========================================
# Supabase Configuration (REQUIRED)
# ==========================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-public-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-secret-key-here

# ==========================================
# NextAuth Configuration (REQUIRED)
# ==========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# ==========================================
# AI Services API Keys (Optional but recommended)
# ==========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# ==========================================
# Hunyuan3D Configuration (Optional)
# ==========================================
NEXT_PUBLIC_HUNYUAN3D_URL=http://localhost:8000
HUNYUAN3D_SERVER_URL=http://localhost:8000

# ==========================================
# Collaboration Service (Optional)
# ==========================================
NEXT_PUBLIC_COLLABORATION_WS_URL=ws://localhost:3001

# ==========================================
# Health Check Configuration (Optional)
# ==========================================
MAX_HEALTH_CHECK_ATTEMPTS=30
HEALTH_CHECK_INTERVAL=2
STARTUP_DELAY=5
